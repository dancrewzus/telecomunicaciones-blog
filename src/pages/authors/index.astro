---
import Layout from "../../layouts/Page.astro";
import AuthorList from "../../components/AuthorList.astro";
---

<Layout
  title="Autores"
  description="Todas las personas que han contrinuido en el blog."
>
  <h1>Autores</h1>
  <AuthorList
    class="author-list grid grid-flow-col gap-4"
    authors="all"
    headingLevel={2}
    showPosts
  />
</Layout>

<style is:global>
  .author-list > li {
    @apply rounded-3xl border-2 border-gray-600;
  }
</style>
